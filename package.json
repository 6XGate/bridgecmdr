{
  "name": "bridgecmdr",
  "productName": "BridgeCmdr",
  "version": "2.0.0-beta.4",
  "description": "Controller for professional A/V monitors and switches",
  "private": true,
  "engines": {
    "node": ">=16.17.0",
    "electron": ">= 24.1.2"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "docker:build": "docker build --platform arm -t bridgecmdr  .",
    "docker:run": "docker run --platform=arm -u $UID:$GID -v .:/app -w /app --rm -it bridgecmdr /bin/bash",
    "docker:sh": "npm run docker:build && npm run docker:run",
    "postinstall": "electron-builder install-app-deps",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore --ignore-path .eslintignore",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --ignore-path .eslintignore",
    "check": "run-p lint:check typecheck",
    "fix": "run-s typecheck lint",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "typecheck": "run-p typecheck:node typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "run-p typecheck build-only",
    "build-only": "electron-vite build",
    "pack": "npm run build && electron-builder --linux --dir --config",
    "dist": "npm run build && electron-builder --linux --config",
    "ncu:update": "ncu -u",
    "ncu:check": "ncu",
    "ncu": "ncu",
    "prepare": "husky install"
  },
  "repository": "github:6XGate/bridgecmdr",
  "keywords": [
    "linux",
    "raspberry-pi",
    "retrogaming",
    "audio-video",
    "sony-bmv",
    "sony-pvm",
    "extron"
  ],
  "author": "Matthew Holder",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/6XGate/bridgecmdr/issues"
  },
  "homepage": "https://github.com/6XGate/bridgecmdr#readme",
  "devDependencies": {
    "@electron-toolkit/utils": "^1.0.2",
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@mdi/js": "^7.2.96",
    "@mdi/svg": "^7.2.96",
    "@rushstack/eslint-patch": "^1.2.0",
    "@sindresorhus/is": "^5.3.0",
    "@types/abstract-leveldown": "^7.2.1",
    "@types/eslint": "^8.37.0",
    "@types/ini": "^1.3.31",
    "@types/leveldown": "^4.0.3",
    "@types/node": "^18.16.3",
    "@types/pouchdb-adapter-idb": "^6.1.4",
    "@types/pouchdb-core": "^7.0.11",
    "@types/pouchdb-find": "^7.3.0",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.1.3",
    "@vuelidate/core": "^2.0.2",
    "@vuelidate/validators": "^2.0.2",
    "@vueuse/core": "^10.1.2",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.3.0",
    "electron-vite": "^1.0.22",
    "eslint": "^8.39.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.11.0",
    "events": "^3.3.0",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "ini": "^4.1.0",
    "npm-check-updates": "^16.10.9",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.0.35",
    "pouchdb-adapter-idb": "^8.0.1",
    "pouchdb-adapter-leveldb-core": "^8.0.1",
    "pouchdb-core": "^8.0.1",
    "pouchdb-find": "^8.0.1",
    "radash": "^10.8.1",
    "sass": "^1.62.1",
    "stream-browserify": "^3.0.0",
    "type-fest": "^3.9.0",
    "typescript": "^4.9.5",
    "util": "^0.12.5",
    "uuid": "^9.0.0",
    "vite": "^4.3.3",
    "vite-plugin-vuetify": "^1.0.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vue": "^3.2.47",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.6.3",
    "vuetify": "^3.2.1",
    "xdg-basedir": "^4.0.0",
    "zod": "^3.21.4"
  },
  "dependencies": {
    "electron-log": "^5.0.0-beta.23",
    "leveldown": "^6.1.1",
    "serialport": "^10.5.0"
  }
}
