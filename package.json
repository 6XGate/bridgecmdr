    "@zip.js/zip.js": "^2.7.53",
    "assert": "^2.1.0",
    "auto-bind": "^5.0.1",
    "bufferutil": "^4.0.8",
    "electron": "^31.7.3",
    "electron-builder": "^24.13.3",
    "electron-unhandled": "^5.0.0",
    "electron-updater": "^6.3.9",
    "electron-vite": "^2.3.0",
