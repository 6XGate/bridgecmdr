{
  "compileOnSave": false,
  "compilerOptions": {
    "inlineSourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "disableSizeLimit": true,
    "emitBOM": false,
    "esModuleInterop": false,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "types": ["vuetify"]
  }
}
